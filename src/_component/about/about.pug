#about
.about
  .about-wrapper
    .about-portrait-wrapper
      img.about-portrait(src=resume.about.portrait.url)
    .about-me
      h1.about-me-title #{resume.about.title}
      h5.about-me-content #{resume.about.content}
    .about-me-details-hobbies
      .about-me-details
        each details in resume.about.details
          .about-me-details-title #{details.title}
          .about-me-details-data #{details.data}
      .about-me-hobbies
        .about-me-hobbies-title #{resume.about.hobbies.title}
      each content in resume.about.hobbies.content
        .about-me-hobbies-icon #{content.icon}
          .about-me-hobbies-title #{content.title}
